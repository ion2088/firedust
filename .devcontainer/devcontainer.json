{
	"name": "Firedust",
	"context": "..",
	"dockerFile": "../Dockerfile",
	"build": {
	  "target": "firedust-dev"
	},
	"runArgs": [
		"--network=host",
		"-e", "DEV_NAME=${localEnv:DEV_NAME}",
		"-e", "DEV_EMAIL=${localEnv:DEV_EMAIL}",
		"-e", "FIREDUST_API_KEY=${localEnv:FIREDUST_API_KEY}",
		"-e", "TEST_PYPI_TOKEN=${localEnv:TEST_PYPI_TOKEN}",
		"-e", "PYPI_TOKEN=${localEnv:PYPI_TOKEN}"
	],
	"mounts": [
		// ----------------------------------------
		// SSH keys
		// mac ssh keys
		"source=/Users/${localEnv:USER_NAME}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
		// linux ssh keys
		// "source=/home/${localEnv:USER_NAME}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
		// windows ssh keys
		// "source=C:\\Users\\${localEnv:USER_NAME}\\.ssh,target=/root/.ssh,type=bind,consistency=cached"
		// TODO: comment out the lines for the OS you are not using
		// ----------------------------------------
	],
	"postCreateCommand": "bash .devcontainer/configure.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.isort",
				"ms-python.black-formatter",
				"charliermarsh.ruff",
				"github.vscode-github-actions",
				"github.copilot-chat",
				"github.copilot",
				"ms-azuretools.vscode-docker"
			]
		}
	}
}
